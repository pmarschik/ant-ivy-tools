<project name="ant-ivy-tools">

	<property name="src.dir" location="src" />
	<property name="build.dir" location="bin" />
	<property name="build.dir.classes" location="${build.dir}/classes" />

	<target name="compile">
		<mkdir dir="${build.dir.classes}" />
		<javac srcdir="${src.dir}" destdir="${build.dir.classes}" includeantruntime="false">
			<classpath>
				<pathelement location="lib/ant-1.8.2.jar" />
				<pathelement location="lib/ivy-2.2.0.jar" />
			</classpath>
		</javac>
	</target>

	<target name="jar" depends="compile">
		<jar destfile="${build.dir}/ant-ivy-tools.jar">
			<fileset dir="${build.dir.classes}" />
			<fileset dir="${src.dir}" />
		</jar>
	</target>

	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

</project>

